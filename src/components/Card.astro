---
let { quote = '', author = '' } = Astro.props;
---

<div class="text-left text-zinc-800 dark:text-zinc-300 max-w-2xl mx-auto text-xl bg-zinc-50 rounded-xl shadow-lg dark:bg-zinc-800 hover:bg-zinc-100 dark:hover:bg-zinc-700 p-5">
  <div class="flow-root rounded-lg px-2 pb-2">
    <div>
      <p class="mt-2 text-md font-light text-zinc-500 dark:text-zinc-200 text-left">
        {quote}
      </p>
      <h3 class="mt-2 text-md text-zinc-900 dark:text-white tracking-tight text-left">
        {author}
      </h3>
    </div>
  </div>
</div>