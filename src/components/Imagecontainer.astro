---
let { text = [], images = []} = Astro.props;
---
<div class="mt-20 grid grid-cols-2 md : grid-col-3 gap-6   mb-10   dark:text-white mx-10">
  {images.map((image, index) => (
    <div   class="mx-auto mt-9 w-full md:w-2/3">
      <img loading="lazy" src={image} class="w-full h-full  rounded-lg" />
      <p class=" dark:text-white   mt-3">{text[index]}</p>
    </div>
  ))}
</div>
